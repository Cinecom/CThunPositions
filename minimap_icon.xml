<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Button name="ConsumeCheck_MinimapButton" hidden="false" enableMouse="true" parent="Minimap" toplevel="true" movable="true">
        <HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="Minimap" relativePoint="TOPLEFT">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <Texture name="ConsumeCheck_MinimapIconTexture" file="Interface\AddOns\Consume_Check\images\minimap_icon_cc">
                    <Size>
                        <AbsDimension x="32" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        
        <Scripts>
            <OnLoad>
                ConsumeCheck_OnLoad(this);
            </OnLoad>
            <OnDragStart>
                ConsumeCheck_OnDragStart(this)
            </OnDragStart>
            <OnDragStop>
                ConsumeCheck_OnDragStop(this)
            </OnDragStop>
            <OnClick>
                ConsumeCheck_OnClick(ConsumeCheck_MinimapButton, button);
            </OnClick>
            <OnEnter>
                GameTooltip:SetOwner(this, "ANCHOR_LEFT");
                GameTooltip:SetText("Consume Check");
                GameTooltip:AddLine("Click to open menu", 1, 1, 1);
                GameTooltip:AddLine("Shift + Click to drag", 0.5, 0.5, 0.5);
                GameTooltip:Show();
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide();
            </OnLeave>
        </Scripts>
    </Button>
</Ui>
